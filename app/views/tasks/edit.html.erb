<h1>Edit or Update a Task</h1>

<%= form_for @list, method: :patch do |f| %>
  <%= f.label :item %>
  <%= f.text_field :item %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :is_completed %>
  <%= f.check_box :is_completed %>

  <%= f.label :date_completed %>
  <%= f.date_field :date_completed %>

  <%= f.submit "Submit" %>
<% end %>
